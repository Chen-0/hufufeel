<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/hufufeel</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <mapping class="me.rubick.transport.app.model.Product"/>
