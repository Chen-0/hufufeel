        <mapping class="me.rubick.transport.app.model.Config"/>
        <mapping class="me.rubick.transport.app.model.DistributionChannel"/>
        <mapping class="me.rubick.transport.app.model.RubickProductWarehourse"/>
        <mapping class="me.rubick.transport.app.model.Warehourse"/>
        <mapping class="me.rubick.transport.app.model.Warehouse"/>
        <mapping class="me.rubick.transport.app.model.Package"/>
        <mapping class="me.rubick.transport.app.model.PackageProduct"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>